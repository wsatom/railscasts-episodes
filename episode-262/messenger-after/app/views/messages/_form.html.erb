<%= form_for @message do |f| %>
  <%= f.error_messages %>
  <p>
	<%= f.select :parent_id, [['United States','2'],['England','3'],['London','4']] %>
    <%= f.label :content, "Add a Carrier" %><br />
    <%= f.text_area :content, :rows => 8 %>
  </p>
  <p><%= f.submit "Post Message" %></p>
<% end %>

